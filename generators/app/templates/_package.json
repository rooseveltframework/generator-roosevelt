{
  "name": "<%= appName %>",
  "description": "",
  "author": "",
  "version": "0.1.0",
  "homepage": "",
  "license": "",
  "main": "app.js",
  "readmeFilename": "",
  "engines": {
    "node": ">=8.0.0"
  },
  "engineStrict": true,
  "dependencies": <%- JSON.stringify(dependencies) %>,
  "devDependencies": {
    "standard": "~10.0.3",
    "stylelint": "~8.4.0",
    "stylelint-config-standard": "~18.0.0",
    "nodemon": "~1.14.7",
    "lint-staged": "~6.0.0",
    "husky": "~0.14.3"
  },
  "rooseveltConfig": {
    "port": <%= port %>,
    "generateFolderStructure": true,
    "localhostOnly": true,
    "suppressLogs": {
      "httpLogs": false,
      "rooseveltLogs": false,
      "rooseveltWarnings": false
    },
    "noMinify": false,
    "htmlValidator": {
      "enable": false,
      "port": 8888,
      "exceptions": {
        "requestHeader": "Partial",
        "modelValue": "_disableValidator"
      },
      "separateProcess": false,
      "suppressWarnings": false
    },
    "multipart": {
      "multiples": true
    },
    "toobusy": {
      "maxLagPerRequest": 70,
      "lagCheckInterval": 500
    },
    "shutdownTimeout": 30000,
    "bodyParserUrlencodedParams": {
      "extended": true
    },
    "bodyParserJsonParams": {},
    "https": {
      "enable": <%= enableHTTPS %>,
      "httpsOnly": <%= httpsOnly %>,
      "httpsPort": <%= httpsPort %>,
      "pfx": <%= pfx %>,
      "keyPath": <%- JSON.stringify(keyPath) %>,
      "passphrase": <%- JSON.stringify(passphrase) %>,
      "ca": <%- JSON.stringify(ca) %>,
      "cafile": true,
      "requestCert": <%= requestCert %>,
      "rejectUnauthorized": <%= rejectUnauthorized %>
    },
    "modelsPath": <%- JSON.stringify(modelsPath) %>,
    "viewsPath": <%- JSON.stringify(viewsPath) %>,
    "viewEngine": <%- JSON.stringify(viewEngine) %>,
    "controllersPath": <%- JSON.stringify(controllersPath) %>,
    "error404": "404.js",
    "error5xx": "5xx.js",
    "error503": "503.js",
    "staticsRoot": "statics",
    "htmlMinify": {
      "override": true,
      "exception_url": false,
      "htmlMinifier": {
        "html5": true
      }
    },
    "css": {
      "sourceDir": "css",
      "compiler": <%- JSON.stringify(cssCompiler) %>,
      "whitelist": null,
      "output": ".build/css",
      "versionFile": null
    },
    "js": {
      "sourceDir": "js",
      "compiler": <%- JSON.stringify(jsCompiler) %>,
      "whitelist": null,
      "blacklist": null,
      "output": ".build/js",
      "bundler": {
        "bundles": [],
        "output": ".bundled",
        "expose": true
      }
    },
    "publicFolder": "public",
    "favicon": "images/favicon.ico",
    "staticsSymlinksToPublic": <%- JSON.stringify(staticsSymlinksToPublic) %>,
    "versionedPublic": false,
    "alwaysHostPublic": false
  },
  "nodemonConfig": {
    "ignore": [
      "**/.build/",
      "statics/js/.bundled/",
      "public/",
      "jsdoc/"
    ],
    "ext": "<%= cssExt %> html js json"
  },
  "private": true,
  "repository": {
    "private-repo": "git+ssh://somewhere:port/folder/on/server"
  },
  "scripts": {
    "start": "npm run production",
    "production": "nodemon app.js --production-mode",
    "prod": "npm run production",
    "p": "npm run p",
    "development": "nodemon app.js --development-mode",
    "dev": "npm run development",
    "d": "npm run development",
    "kill-validator": "node ./node_modules/roosevelt/lib/scripts/killValidator.js",
    "kv": "npm run kill-validator",
    "clean": "node ./node_modules/roosevelt/lib/scripts/appCleanup.js",
    "audit": "node ./node_modules/roosevelt/lib/scripts/configAuditor.js",
    "standard": "standard",
    "stylelint": "./node_modules/.bin/stylelint \"statics/css/**/*.<%= cssExt %>\"<%= cssSyntax %>",
    "lint": "npm run standard && npm run stylelint",
    "test": "npm run lint",
    "precommit": "lint-staged",
    "pc": "npm run precommit"
  },
  "lint-staged": {
    "*.less": "./node_modules/.bin/stylelint<%= cssSyntax %>",
    "*.js": "standard"
  }
}
