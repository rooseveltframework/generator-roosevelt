{
  "name": "<%= appName %>",
  "description": "",
  "author": "",
  "version": "0.1.0",
  "homepage": "",
  "license": "",
  "main": "app.js",
  "readmeFilename": "",
  "engines": {
    "node": ">=4.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "roosevelt": "^0.8.0",
    "teddy": "^0.4.0",
    "roosevelt-less": "^0.2.0",
    "roosevelt-closure": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^4.0.0",
    "lesshint": "^3.3.0",
    "htmlhint": "^0.9.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "supervisor": "^0.12.0",
    "lint-staged": "^4.0.0",
    "husky": "^0.13.4"
  },
  "rooseveltConfig": {
    "port": <%= port %>,
    "localhostOnly": <%= localhostOnly %>,
    "disableLogger": <%= disableLogger %>,
    "noMinify": <%= noMinify %>,
    "enableValidator": <%= enableValidator %>,
    "htmlValidator": <%- htmlValidator %>,
    "validatorExceptions": <%- validatorExceptions %>,
    "multipart": <%- multipart %>,
    "maxLagPerRequest": 2000,
    "shutdownTimeout": <%= shutdownTimeout %>,
    "https": <%= https %>,
    "httpsOnly": <%= httpsOnly %>,
    "httpsPort": <%= httpsPort %>,
    "pfx": <%= pfx %>,
    "keyPath": <%- keyPath %>,
    "passphrase": <%- passphrase %>,
    "ca": <%- ca %>,
    "requestCert": <%- requestCert %>,
    "rejectUnauthorized": <%= rejectUnauthorized %>,
    "modelsPath": "<%= modelsPath %>",
    "viewsPath": "<%= viewsPath %>",
    "viewEngine": "<%= viewEngine %>",
    "controllersPath": "<%= controllersPath %>",
    "error404": "<%= error404 %>",
    "error5xx": "<%= error5xx %>",
    "error503": "<%= error503 %>",
    "staticsRoot": "<%= staticsRoot %>",
    "htmlMinify": <%- htmlMinify %>,
    "cssPath": "<%= cssPath %>",
    "cssCompiler": <%- cssCompiler %>,
    "cssCompiledOutput": "<%= cssCompiledOutput %>",
    "cssCompilerWhitelist": <%- cssCompilerWhitelist %>,
    "jsPath": "<%= jsPath %>",
    "bundledJsPath": "<%= bundledJsPath %>",
    "exposeBundles": "<%= exposeBundles %>",
    "browserifyBundles": "<%= browserifyBundles %>",
    "jsCompiler": <%- jsCompiler %>,
    "jsCompiledOutput": "<%= jsCompiledOutput %>",
    "jsCompilerWhitelist": <%- jsCompilerWhitelist %>,
    "publicFolder": "<%= publicFolder %>",
    "favicon": "<%= favicon %>",
    "symlinksToStatics": <%- symlinksToStatics %>,
    "versionedStatics": <%= versionedStatics %>,
    "versionedCssFile": <%- versionedCssFile %>,
    "alwaysHostPublic": <%= alwaysHostPublic %>,
    "bodyParserJsonParams": <%- bodyParserJsonParams %>,
    "bodyParserUrlencodedParams": <%- bodyParserUrlencodedParams %>,
    "libPath": "<%= libPath %>",
    "libPathNodeModulesSymlink": "<%= libPathNodeModulesSymlink %>",
    "modelsNodeModulesSymlink": "<%= modelsNodeModulesSymlink %>"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "eqeqeq": 2,
      "curly": 2,
      "semi": 2,
      "strict": [2, "never"],
      "quotes": [2, "single"],
      "no-trailing-spaces": ["error", {"skipBlankLines": false}],
      "camelcase": [2, {"properties": "always"}],
      "comma-spacing": [2, {"before": false, "after": true}],
      "indent": [2, 2, {"VariableDeclarator": 2, "SwitchCase": 1}],
      "handle-callback-err": 0, 
      "no-use-before-define": [2, "nofunc"],
      "no-unused-vars": [2, {"vars": "all", "args": "none"}],
      "no-console": 0,
      "no-mixed-requires": 0,
      "one-var": [2, "always"
    ],  "dot-notation": 0,
      "no-path-concat": 0,
      "no-alert": 0,
      "brace-style": [2, "stroustrup"],
      "keyword-spacing": ["error", {"before": true, "after": true}],
      "space-before-blocks": ["error"],
      "eol-last": ["error", "always"]
    }
  },
  "private": true,
  "repository": {
    "private-repo": "git+ssh://somewhere:port/folder/on/server"
  },
  "scripts": {
    "start": "npm run prod",
    "prod": "./node_modules/.bin/supervisor -k -e js,json,less,html -i statics/.build/,.git/,public/,node_modules/ -- app.js -prod",
    "dev": "./node_modules/.bin/supervisor -k -e js,json,less,html -i statics/.build/,.git/,public/,node_modules/ -- app.js -dev",
    "test": "npm run lint",
    "eslint": "./node_modules/.bin/eslint .",
    "stylelint": "./node_modules/.bin/stylelint \"statics/css/**/*.less\" --syntax less",
    "htmlhint": "./node_modules/.bin/htmlhint --config .htmlhintrc mvc/views",
    "lint": "npm run htmlhint && npm run stylelint && npm run eslint",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.html": "./node_modules/.bin/htmlhint --config .htmlhintrc",
    "*.less": "./node_modules/.bin/stylelint --syntax less",
    "*.js": "./node_modules/.bin/eslint"
  }
}
